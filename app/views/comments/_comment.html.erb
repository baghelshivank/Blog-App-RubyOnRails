<% unless comment.archived? %>
    <p id="the-commenter">
    <strong><%= comment.commenter %>:</strong>   
    </p>
    <div id="the-comment">
        <%= comment.body %>
        <br>         
        <%= link_to article_comment_path(comment.article, comment), data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure you want to delete this comment?"
        } do %>
            <div id="delete-cmnt-btn-wrapper">
                <div id="delete-cmnt-btn">
                </div>
            </div>
        <% end %>
    </div>

<% end %>